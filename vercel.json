{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/next"
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/server/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/client/$1"
        }
    ]
}